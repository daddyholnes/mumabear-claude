                        <div className="mt-1">
                          {step.status === 'completed' ? (
                            <CheckCircle className="w-4 h-4 text-green-400" />
                          ) : step.status === 'in-progress' ? (
                            <Circle className="w-4 h-4 text-yellow-400 animate-pulse" />
                          ) : (
