# üêª Podplay Sanctuary - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# üîë REQUIRED API KEYS (Get these from the respective providers)
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Configuration  
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI Configuration
GEMINI_API_KEY_PRIMARY=your-gemini-api-key-here
GEMINI_API_KEY_FALLBACK=your-backup-gemini-key-here

# Scrapybara Integration
SCRAPYBARA_API_KEY=scrapy-your-scrapybara-api-key-here

# =============================================================================
# üß† MEMORY & PERSISTENCE (Optional but recommended)
# =============================================================================

# Mem0.ai Configuration
MEM0_API_KEY=your-mem0-api-key-here
MEM0_USER_ID=your-unique-user-id
MEM0_MEMORY_ENABLED=True
MEM0_RAG_ENABLED=True
MEM0_CONTEXT_WINDOW=100
MEM0_MEMORY_RETENTION=persistent

# =============================================================================
# üåê APPLICATION CONFIGURATION
# =============================================================================

# Server Configuration
BACKEND_PORT=5001
FRONTEND_PORT=3000
FLASK_ENV=development
VITE_API_BASE_URL=http://localhost:5001

# =============================================================================
# üîê SECURITY SETTINGS
# =============================================================================

# Change this to a secure random string in production
SECRET_KEY=change-this-to-a-secure-random-string-in-production
SESSION_TIMEOUT=3600

# =============================================================================
# üéöÔ∏è FEATURE TOGGLES
# =============================================================================

# Development Features
HOT_RELOAD=True
DEBUG_TOOLBAR=False
MOCK_DATA_ENABLED=False

# Mama Bear Learning
LEARNING_ENABLED=True
LEARNING_RETENTION_DAYS=365
ADAPTIVE_RECOMMENDATIONS=True

# Notifications
DAILY_BRIEFING_ENABLED=True
PUSH_NOTIFICATIONS=False
EMAIL_NOTIFICATIONS=False

# Performance
CACHE_ENABLED=True
CACHE_TIMEOUT=300
COMPRESSION_ENABLED=True

# =============================================================================
# üìä LOGGING CONFIGURATION  
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=mama_bear.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# üöÄ DEPLOYMENT SETTINGS (Production)
# =============================================================================

# Set to True in production
PRODUCTION=False
RATE_LIMITING=True

# CORS Configuration (adjust for your domain)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

